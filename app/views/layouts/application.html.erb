<!DOCTYPE html>
<html>
  <head>
    <title>PHIGGit</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    "https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css", integrity: "sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO", crossorigin: "anonymous" %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <div class="logged_banner logged_in">
        <div id="logo_block" class="logo_cell">PHIGGit</div>
        <div class="logged_message">
          <%= link_to 'Log out', session_path, method: :delete, :class=>"text-right text-white btn btn-secondary text-white"  %>
          <div class="btn btn-primary">Welcome, <%= current_user.username %></div>
        </div>
      </div>
    <% else %>
      <div class="logged_banner logged_out">
        <div id="logo_block" class="logo_cell"><h2>PHIGGit</h2></div>
        <div class="logged_message">
          <%= link_to 'Sign Up', new_user_path, { :class=>"text-right text-white btn btn-secondary text-white"} %> | 
          <%= link_to 'Log In', new_session_path, { :class=>"text-right text-white btn btn-secondary text-white"} %>
        </div>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
