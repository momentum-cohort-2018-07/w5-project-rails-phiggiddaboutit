<%if notice %>
<p id="notice" class="alert alert-success" role="alert"><%= notice %></p>
<% end %>

<div>
  <div>
    <h1><%= @story.title %></h1>
    <h6>By <%= @story.user_id %></h6>
    <% begin %>
      <%= image_tag "#{@story.img_url}" %>
    <% rescue %>
    <% end %>
    <div>
      <p><%= @story.text %></p>
    </div>
  </div>
</div>

<%-# gene commenting%>

<div>
<section><%=form_for(:comment ,url: ) |form| %>
    <%= form.text_field     
<% end %>
</section>
<section>
    <%= comments.each do |comment|%>
    <div>
        <section class="comment-header"><strong><%=comment.username%></strong></strong>
        <section class="comment-content">
            <p class="comment-content__text>
                <%=comment.text%>
            </p>
        </section>
    </div>
    <%end%>
</section>
</div>
