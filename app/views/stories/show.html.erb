<%if notice %>
<p id="notice" class="alert alert-success" role="alert"><%= notice %></p>
<% end %>

<div>
  <div>
    <h1><%= @story.title %></h1>
    <h6>By <%= @story.user_id %></h6>
    <% begin %>
      <%= image_tag "#{@story.img_url}" %>
    <% rescue %>
    <% end %>
    <div>
      <p><%= @story.text %></p>
    </div>
    <section>
        <% @comments = @story.comments%>
    </section>
    <section>
        <%= form_for [@story, Comment.new] do |form|%>
            <%= form.text_area :text, placeholder: "Comment" %>
            <%= form.submit "Comment"%>
        <%end%>
    </section>
    <ul>
       <% @comments = @story.comments%>
       <%= render(partial: 'comments/comment', collection: @story.comments)%>
    </ul>
    

  </div>
</div>


